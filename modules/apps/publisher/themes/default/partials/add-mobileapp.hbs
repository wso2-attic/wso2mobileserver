	<div class="row-fluid">
		<form class="form-horizontal" id='form-asset-create' action="/publisher/api/asset/mobileapp" method="post" enctype="multipart/form-data">
			<div class="well-small offset9">
				<a class="btn btn-primary" href="#modal-upload" data-toggle="modal">Upload Application</a>
			</div>

			
			
			
			<input type="hidden" id="appmeta" name="appmeta" value="">

							<input type="hidden" name="version" value="1.0"> <input
								type="hidden" name="provider" value="1WSO2Mobile">

							<div class="control-group">
								<label class="control-label" for="txtName">Name</label>
								<div class="controls">
									<input class="field span6" type="text" name="name" id="txtName">
								</div>
							</div>
