										<option value="ios">iOS</option>
										<option value="webapp">Web App</option>
									</select>
								</div>
							</div>


							<div id="control-webapp" style="display: none;"
								class="control-group">
								<label class="control-label" for="txtName">Web App URL</label>
								<div class="controls">
									<input class="field span6" type="text" name="url"
										id="txtWebapp">
								</div>
							</div>


							<div class="control-group">
								<label class="control-label" for="txtOS">Market Type</label>
								<div class="controls">
									<select id="txtMarket" name="markettype" class="selectpicker">
										<option value="Enterprise">Enterprise</option>
										<option value="Market">Market</option>
									</select>
								</div>
							</div>



							<div id="control-packagename" style="display: none;"
								class="control-group">
								<label class="control-label" for="txtName">Package Name</label>
								<div class="controls">
									<input class="field span6" type="text" name="packagename"
										id="txtPackagename">
								</div>
							</div>

							<div class="control-group">
								<label class="control-label" for="txtBanner">Banner</label>
								<div class="controls">
									<div class="fileupload fileupload-new"
										data-provides="fileupload">
										<div
											class="fileupload-preview fileupload-preview-banner thumbnail"></div>
										<div>
											<span class="btn btn-file"><span
												class="fileupload-new"><i class="icon-plus-sign"></i></span><span
												class="fileupload-exists"><i class="icon-edit"></i></span> <input
												type="file" name="bannerFile" id="txtBanner" /> </span> <a
												href="#" class="btn fileupload-exists"
												data-dismiss="fileupload"><i class="icon-remove"></i></a>
										</div>
									</div>
								</div>
							</div>

							<div class="control-group">
								<label class="control-label" for="txtScreenShot">Screen
									Shots</label>
								<div class="controls">

									<div class="fileupload fileupload-new"
										data-provides="fileupload">
										<div class="fileupload-preview thumbnail"></div>
										<div>
											<span class="btn btn-file"><span
												class="fileupload-new"><i class="icon-plus-sign"></i></span><span
												class="fileupload-exists"><i class="icon-edit"></i></span> <input
												type="file" class="uploadAction" name="screenshot1File"
