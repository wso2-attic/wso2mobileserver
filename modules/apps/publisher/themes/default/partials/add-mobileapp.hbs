							<div class="control-group">
								<label class="control-label" for="txtDescription">Description</label>
								<div class="controls">
									<textarea class="field span6" id="txtDescription"
										name="description" rows="6"> </textarea>
								</div>
							</div>

							<div class="control-group">
								<label class="control-label" for="txtRecentChanges">Recent
									Changes</label>
								<div class="controls">
									<textarea class="field span6" id="txtRecentChanges"
										name="recentChanges" rows="6"> </textarea>
								</div>
							</div>

							<div class="control-group">
								<label class="control-label" for="txtCategory">Category</label>
								<div class="controls">
									<select id="txtCategory" name="category" class="selectpicker">
